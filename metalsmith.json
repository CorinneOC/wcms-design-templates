{
  "source": "src/styleguide/_patterns",
  "destination": "build/_responsive/styleguide",
  "plugins": {
    "metalsmith-collections": {
      "fragments": {
        "pattern": "*.md",
        "sortBy": "title"
      }
    },
    "metalsmith-markdown": true,
    "metalsmith-permalinks": ":title",
    "metalsmith-templates": {
      "engine": "swig",
      "directory": "src/styleguide/_layouts"
    }
  }
}